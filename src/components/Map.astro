---
// Componente de mapa interactivo
import BotonMapa from '../assets/botonmapa.png';
---

<div class="map-container">
	<div class="circulos2-background">
		<img src="/circulos2.PNG" alt="Fondo circulos2" class="circulos2-bg" />
	</div>
	<div class="map-wrapper">
		<iframe 
			src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3989.8!2d-78.6!3d-1.2!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMcKwMTInMDAuMCJTIDc4wrAzNicwMC4wIlc!5e0!3m2!1ses!2sec!4v1234567890123!5m2!1ses!2sec"
			width="100%" 
			height="500" 
			style="border:0;" 
			allowfullscreen="" 
			loading="lazy" 
			referrerpolicy="no-referrer-when-downgrade"
			class="map-iframe">
		</iframe>
		<div class="map-button-overlay">
			<a href="https://maps.app.goo.gl/DkUJwPcbxXBHjCSHA" target="_blank" class="map-button">
				<img src={BotonMapa.src} alt="Abrir en Maps" class="map-button-image" />
			</a>
		</div>
	</div>
</div>

<style>
	.map-container {
		width: 100%;
		background: #000000;
		padding: 1rem 2rem 3rem 2rem;
		box-sizing: border-box;
		display: flex;
		justify-content: center;
		align-items: center;
		position: relative;
		min-height: 600px;
	}

	.circulos2-background {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: 1;
		overflow: hidden;
	}

	.circulos2-bg {
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: center center;
		opacity: 0.2;
	}

	.map-wrapper {
		width: 85%;
		max-width: 800px;
		position: relative;
		z-index: 3;
		border-radius: 30px;
		overflow: hidden;
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
	}

	.map-iframe {
		width: 100%;
		height: 500px;
		border: none;
		display: block;
	}

	.map-button-overlay {
		position: absolute;
		bottom: 20px;
		right: 20px;
		z-index: 4;
	}

	.map-button {
		display: block;
		text-decoration: none;
		transition: all 0.3s ease;
	}

	.map-button:hover {
		transform: translateY(-2px) scale(1.05);
		filter: brightness(1.1);
	}

	.map-button-image {
		width: auto;
		height: 120px;
		display: block;
		transition: all 0.3s ease;
	}

	/* Responsive */
	@media (max-width: 768px) {
		.map-container {
			padding: 3rem 1rem;
			min-height: 500px;
		}

		.map-wrapper {
			max-width: 100%;
		}

		.map-iframe {
			height: 400px;
		}

		.map-button-overlay {
			bottom: 15px;
			right: 15px;
		}

		.map-button-image {
			height: 100px;
		}
	}

	@media (max-width: 480px) {
		.map-container {
			padding: 2rem 0.5rem;
			min-height: 450px;
		}

		.map-iframe {
			height: 350px;
		}

		.map-button-overlay {
			bottom: 10px;
			right: 10px;
		}

	.map-button-image {
		height: 80px;
	}
}

</style>
