---
import EdiAmbato from '../assets/EdiAmbato.png';
import Recurso1 from '../assets/Recurso 1.png';
import Recurso4 from '../assets/Recurso 4.png';
import CirArrib from '../assets/cirarrib.png';
---

<div class="poster-container">
	<!-- Background superior con cirarrib -->
	<div class="top-background">
		<img src={CirArrib.src} alt="Círculos superiores" class="cirarrib-bg" />
	</div>
	
	<!-- Imagen de la iglesia y aros concéntricos -->
	<div class="church-rings-layer">
		<img src={Recurso1.src} alt="Iglesia y aros concéntricos" class="church-rings-image" />
	</div>
	
	<!-- Imagen de la edición Ambato -->
	<div class="ambato-layer">
		<img src={EdiAmbato.src} alt="Edición Ambato" class="ambato-image" />
	</div>
	
	<!-- Imagen del texto FONLES EXPO 2025 -->
	<div class="expo-text-layer">
		<img src={Recurso4.src} alt="FONLES EXPO 2025" class="expo-text-image" />
	</div>
</div>

<style>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	.poster-container {
		height: 80vh;
		width: 100vw;
		background: #000;
		display: flex;
		align-items: center;
		justify-content: center;
		position: relative;
		overflow: hidden;
		margin: 0;
		padding: 0;
	}

	.top-background {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 30%;
		z-index: 0;
		overflow: hidden;
	}

	.cirarrib-bg {
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: top center;
		opacity: 0.8;
	}


	.church-rings-layer {
		position: absolute;
		top: 50%;
		right: 15%;
		transform: translateY(-50%);
		width: 65%;
		height: 85%;
		z-index: 1;
	}

	.church-rings-image {
		width: 100%;
		height: 100%;
		object-fit: contain;
	}

	.expo-text-layer {
		position: absolute;
		top: 10%;
		left: 20%;
		width: 30%;
		height: 20%;
		z-index: 2;
	}

	.expo-text-image {
		width: 100%;
		height: 100%;
		object-fit: contain;
	}

	.ambato-layer {
		position: absolute;
		top: 32.5%;
		left: 20.5%;
		width: 25%;
		height: 16%;
		z-index: 3;
	}

	.ambato-image {
		width: 100%;
		height: 100%;
		object-fit: contain;
		animation: float 4s ease-in-out infinite;
	}

	/* Animación sutil para los elementos */
	@keyframes pulse {
		0%, 100% { opacity: 0.6; }
		50% { opacity: 0.8; }
	}

	@keyframes float {
		0%, 100% { transform: translateY(0px); }
		50% { transform: translateY(-10px); }
	}

	/* Responsive */
	@media (max-width: 768px) {
		.poster-container {
			height: 60vh;
		}

		.top-background {
			height: 25%;
		}

		.cirarrib-bg {
			opacity: 0.7;
		}
		
		.church-rings-layer {
			right: 10%;
			width: 70%;
			height: 75%;
			top: 45%;
		}
		
		.expo-text-layer {
			left: 15%;
			width: 35%;
			height: 18%;
			top: 8%;
		}
		
		.ambato-layer {
			left: 15.5%;
			top: 28.5%;
			width: 30%;
			height: 15%;
		}
	}

	@media (max-width: 480px) {
		.poster-container {
			height: 50vh;
		}
	}

	@media (max-width: 360px) {
		.poster-container {
			height: 45vh;
		}
	}
</style>