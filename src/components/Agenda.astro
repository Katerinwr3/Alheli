---
// Componente de agenda
---

<section id="temas-a-tratar" class="agenda-section">
	
	<div class="agenda-container">
		<!-- Título principal -->
		<div class="main-title">
			AGENDA
		</div>
		
		<!-- Contenedor de la lista -->
		<div class="agenda-box">
			<div class="agenda-list">
				<div class="agenda-item">Demostración en vivo</div>
				<div class="agenda-item">Networking con expertos</div>
				<div class="agenda-item">Material exclusivo</div>
				<div class="agenda-item">Casos prácticos</div>
			</div>
		</div>
	</div>
</section>

<style>
	.agenda-section {
		width: 100%;
		max-width: 100vw;
		background: #000000;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 4rem 2rem;
		font-family: sans-serif;
		box-sizing: border-box;
		overflow-x: hidden;
		position: relative;
	}


	.agenda-container {
		max-width: 1000px;
		width: 100%;
		text-align: center;
		position: relative;
		z-index: 2;
	}

	.main-title {
		font-family: 'Montserrat', sans-serif;
		font-size: clamp(2.5rem, 5vw, 4rem);
		font-weight: 600;
		color: white;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		margin-bottom: 2.5rem;
		line-height: 1.1;
	}

	.agenda-box {
		background: rgba(20, 20, 20, 0.9);
		border-radius: 25px;
		padding: 2.5rem 2rem;
		backdrop-filter: blur(15px);
		border: 1px solid rgba(255, 255, 255, 0.1);
		box-shadow: 
			0 20px 40px rgba(0, 0, 0, 0.3),
			0 0 20px rgba(230, 38, 134, 0.1),
			inset 0 1px 0 rgba(255, 255, 255, 0.1);
		max-width: 600px;
		margin: 0 auto;
		position: relative;
		z-index: 3;
		transition: all 0.4s ease;
		overflow: hidden;
	}

	.agenda-box::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 1px;
		background: linear-gradient(90deg, transparent, rgba(230, 38, 134, 0.5), transparent);
		opacity: 0;
		transition: opacity 0.3s ease;
	}

	.agenda-box::after {
		content: '';
		position: absolute;
		top: -50%;
		left: -50%;
		width: 200%;
		height: 200%;
		background: radial-gradient(circle, rgba(230, 38, 134, 0.1) 0%, transparent 70%);
		opacity: 0;
		transition: opacity 0.4s ease;
		pointer-events: none;
		animation: pulse-glow 3s ease-in-out infinite;
	}

	@keyframes pulse-glow {
		0%, 100% {
			opacity: 0;
		}
		50% {
			opacity: 0.05;
		}
	}

	.agenda-box:hover {
		transform: translateY(-5px);
		box-shadow: 
			0 25px 50px rgba(0, 0, 0, 0.4),
			0 0 30px rgba(230, 38, 134, 0.2),
			0 0 60px rgba(255, 107, 53, 0.1),
			inset 0 1px 0 rgba(255, 255, 255, 0.2);
	}

	.agenda-box:hover::before {
		opacity: 1;
	}

	.agenda-box:hover::after {
		opacity: 1;
	}

	.agenda-list {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
	}

	.agenda-item {
		font-family: Arial, sans-serif;
		font-size: clamp(1.1rem, 2.2vw, 1.6rem);
		font-weight: normal;
		color: white;
		text-align: center;
		padding: 0.5rem 0;
		letter-spacing: 0.02em;
		position: relative;
		z-index: 2;
		text-shadow: 0 0 10px rgba(255, 255, 255, 0.1);
		transition: all 0.3s ease;
	}


	.agenda-item:hover {
		text-shadow: 0 0 15px rgba(255, 255, 255, 0.2);
		color: #f8f8f8;
		transform: translateX(5px);
	}


	/* Responsive */
	@media (max-width: 768px) {
		.agenda-section {
			padding: 1rem 1.5rem;
		}

		.main-title {
			font-size: clamp(2rem, 4vw, 2.8rem);
			margin-bottom: 2rem;
		}

		.agenda-box {
			padding: 2rem 1.5rem;
		}

		.agenda-list {
			gap: 1.2rem;
		}

		.agenda-item {
			font-size: clamp(1rem, 2vw, 1.3rem);
		}
	}

	@media (max-width: 480px) {
		.agenda-section {
			padding: 0.6rem 1rem;
		}

		.main-title {
			font-size: clamp(1.8rem, 3.5vw, 2.2rem);
			margin-bottom: 1.8rem;
		}

		.agenda-box {
			padding: 1.8rem 1.2rem;
		}

		.agenda-list {
			gap: 1rem;
		}

		.agenda-item {
			font-size: clamp(0.95rem, 1.8vw, 1.1rem);
		}
	}

	@media (max-width: 360px) {
		.agenda-section {
			padding: 0.5rem 0.8rem;
		}

		.main-title {
			font-size: clamp(1.6rem, 3vw, 1.8rem);
			margin-bottom: 1.5rem;
		}

		.agenda-box {
			padding: 1.5rem 1rem;
		}

		.agenda-list {
			gap: 0.8rem;
		}

		.agenda-item {
			font-size: clamp(0.85rem, 1.6vw, 1rem);
		}
	}

	/* Orientación landscape en móviles */
	@media (max-width: 768px) and (orientation: landscape) {
		.agenda-section {
			padding: 1rem 1rem;
		}

		.main-title {
			font-size: clamp(1.2rem, 2.5vw, 1.6rem);
			margin-bottom: 1rem;
		}

		.agenda-box {
			padding: 1.5rem 1.2rem;
		}

		.agenda-list {
			gap: 0.8rem;
		}

		.agenda-item {
			font-size: clamp(0.8rem, 1.3vw, 1rem);
		}
	}

	/* Pantallas muy grandes */
	@media (min-width: 1400px) {
		.agenda-section {
			padding: 4rem 3rem;
		}

		.main-title {
			font-size: 5rem;
			margin-bottom: 3rem;
		}

		.agenda-box {
			padding: 3rem 2.5rem;
			max-width: 700px;
		}

		.agenda-list {
			gap: 2rem;
		}

		.agenda-item {
			font-size: 1.8rem;
		}
	}
</style>
