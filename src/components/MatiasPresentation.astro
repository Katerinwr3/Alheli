---
// Componente de presentación de Matías
import MatiasImage from '../assets/matias 2.png';
---

<section class="matias-presentation">
	<!-- Título principal -->
	<div class="main-title">
		<div class="title-line-1">ESTO ES LO QUE</div>
		<div class="title-line-2">VERÁS EN VIVO</div>
	</div>
	
	<!-- Imagen de Matías -->
	<div class="matias-image-container">
		<img src={MatiasImage.src} alt="Matías Fonseca" class="matias-photo" />
	</div>
</section>

<style>
	.matias-presentation {
		width: 100%;
		min-height: 100vh;
		background: #000000;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		padding: 1rem 2rem 3rem 2rem;
		font-family: 'Montserrat', sans-serif;
	}

	.main-title {
		text-align: center;
		margin-bottom: 4rem;
	}

	.title-line-1 {
		font-size: clamp(1.8rem, 4.5vw, 3rem);
		font-weight: normal;
		color: white;
		text-transform: uppercase;
		letter-spacing: 0.1em;
		margin-bottom: 0.5rem;
	}

	.title-line-2 {
		font-size: clamp(1.8rem, 4.5vw, 3rem);
		font-weight: normal;
		color: white;
		text-transform: uppercase;
		letter-spacing: 0.1em;
	}

	.matias-image-container {
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.matias-photo {
		width: 90vw;
		height: auto;
		max-width: none;
		object-fit: contain;
		object-position: center;
	}

	/* Responsive */
	@media (max-width: 768px) {
		.matias-presentation {
			padding: 0.8rem 1rem;
			padding-top: 1rem;
			min-height: auto;
		}

		.main-title {
			margin-bottom: 2rem;
		}

		.matias-photo {
			width: 90vw;
		}
	}

	@media (max-width: 480px) {
		.matias-presentation {
			padding: 0.6rem 0.5rem;
			padding-top: 0.8rem;
		}

		.matias-photo {
			width: 90vw;
		}

		.title-line-1 {
			font-size: 2rem;
		}

		.title-line-2 {
			font-size: 2rem;
		}
	}

	@media (max-width: 360px) {
		.matias-presentation {
			padding: 0.4rem 0.5rem;
			padding-top: 0.6rem;
		}

		.title-line-1 {
			font-size: 1.6rem;
		}

		.title-line-2 {
			font-size: 1.6rem;
		}

		.matias-photo {
			width: 95vw;
		}
	}
</style>
