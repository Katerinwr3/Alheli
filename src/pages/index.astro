---
import Welcome from '../components/Welcome.astro';
import Layout from '../layouts/Layout.astro';
import Map from '../components/Map.astro';
import MatiasPresentation from '../components/MatiasPresentation.astro';
import MeetDeveloper from '../components/MeetDeveloper.astro';
import TemasATratar from '../components/TemasATratar.astro';
import Agenda from '../components/Agenda.astro';
import EventInformation from '../components/EventInformation.astro';
import Sponsors from '../components/Sponsors.astro';
import Alheli from '../assets/Alheli.png';
import FondoMapa from '../assets/fondomapa.png';

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout>
	<Welcome />
	
	<!-- Sección de Alhelí con fondo negro -->
	<section class="alheli-section">
		
		<!-- Texto superior -->
		<div class="top-text">
			LANZAMIENTO OFICIAL DE
		</div>
		
		<!-- Logo y nombre Alhelí -->
		<div class="alheli-logo-section">
			<img src={Alheli.src} alt="Alhelí" class="alheli-logo" />
		</div>
		
		<!-- Texto descriptivo -->
		<div class="description-text">
			LA PRIMERA HERRAMIENTA QUE<br>
			TRANSFORMARÁ TUS DECISIONES<br>
			JURÍDICAS Y ADMINISTRATIVAS
		</div>
		
	<!-- Barra rosa inferior -->
	<div class="pink-bar"></div>
</section>

<!-- Sección de información del evento -->
<section class="event-info-section">
	<div class="event-info-panel">
		<!-- Columna de Fecha -->
		<div class="info-column">
			<div class="column-title">FECHA</div>
			<div class="column-content">
				<div class="date-line">JUEVES</div>
				<div class="date-line">25 DE</div>
				<div class="date-line">SEPTIEMBRE</div>
				<div class="date-line">2025</div>
			</div>
		</div>
		
		<!-- Línea divisoria -->
		<div class="divider-line"></div>
		
		<!-- Columna de Lugar -->
		<div class="info-column">
			<div class="column-title">LUGAR</div>
			<div class="column-content">
				<div class="place-line">SALÓN DE</div>
				<div class="place-line">EVENTOS DEL</div>
				<div class="place-line">CONSEJO</div>
				<div class="place-line">PROVINCIAL</div>
			</div>
		</div>
		
		<!-- Línea divisoria -->
		<div class="divider-line"></div>
		
		<!-- Columna de Dirección -->
		<div class="info-column">
			<div class="column-title">DIRECCIÓN</div>
			<div class="column-content">
				<div class="address-line">MARIANO</div>
				<div class="address-line">CASTILLO Y</div>
				<div class="address-line">SIMÓN</div>
				<div class="address-line">BOLIVAR</div>
			</div>
		</div>
	</div>
</section>

<!-- Componente de mapa -->
<Map />

<!-- Componente de presentación de Matías -->
<MatiasPresentation />

<!-- Componente de conoce al desarrollador -->
<MeetDeveloper />

<!-- Componente de temas a tratar -->
<TemasATratar />

<!-- Componente de agenda -->
<Agenda />

<!-- Componente de información del evento -->
<EventInformation />

<!-- Componente de auspiciantes -->
<Sponsors />
</Layout>

<style>
	/* Prevenir desbordamiento horizontal global */
	* {
		box-sizing: border-box;
	}
	
	html, body {
		overflow-x: hidden;
		max-width: 100vw;
		width: 100%;
	}
	
	/* Asegurar que todos los elementos respeten el ancho de pantalla */
	section, div, img {
		max-width: 100%;
	}
	
	.alheli-section {
		min-height: auto;
		width: 100%;
		max-width: 100vw;
		background: #000;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		position: relative;
		overflow: hidden;
		font-family: sans-serif;
		color: white;
		padding: 1cm 1rem 1.5cm 1rem;
		box-sizing: border-box;
	}


	.top-text {
		font-size: clamp(1.1rem, 2.5vw, 1.5rem);
		font-weight: 400;
		letter-spacing: 0.1em;
		text-align: center;
		margin-bottom: 1rem;
		opacity: 0.9;
		position: relative;
	}

		.alheli-logo-section {
			display: flex;
			align-items: center;
			justify-content: center;
			margin-bottom: 0.8rem;
			position: relative;
		}

	.alheli-logo {
		max-width: 100%;
		height: auto;
		max-height: 160px;
		object-fit: contain;
	}

	.description-text {
		font-size: clamp(1rem, 2.5vw, 1.6rem);
		font-weight: 400;
		text-align: center;
		line-height: 1.3;
		margin-bottom: 1rem;
		letter-spacing: 0.05em;
		position: relative;
	}

	.pink-bar {
		width: 150px;
		height: 12px;
		background: #E62686;
		border-radius: 6px;
		position: relative;
	}

	/* Responsive para todas las secciones */
	@media (max-width: 1200px) {
		.alheli-section {
			padding: 2rem 1rem;
			max-width: 100vw;
		}
		
		.top-text {
			font-size: clamp(1.2rem, 2.5vw, 1.4rem);
		}
		
		.alheli-logo {
			max-height: 140px;
		}
		
		.description-text {
			font-size: clamp(1rem, 2.5vw, 1.4rem);
		}
	}

	@media (max-width: 992px) {
		
		.top-text {
			font-size: clamp(1.1rem, 2.2vw, 1.3rem);
			margin-bottom: 2.2rem;
		}
		
		.alheli-logo {
			max-height: 120px;
		}
		
		.description-text {
			font-size: clamp(0.95rem, 2.2vw, 1.2rem);
			margin-bottom: 2.8rem;
		}
		
		.pink-bar {
			width: 280px;
			height: 11px;
		}
	}

	@media (max-width: 768px) {
		.alheli-section {
			padding: 0.5cm 0.5rem 0.75cm 0.5rem;
			max-width: 100vw;
			overflow-x: hidden;
		}
		
		.top-text {
			font-size: clamp(1rem, 2vw, 1.2rem);
			margin-bottom: 0.6rem;
		}
		
		.alheli-logo {
			max-height: 110px;
		}
		
		.description-text {
			font-size: clamp(0.9rem, 2.2vw, 1.1rem);
			margin-bottom: 0.6rem;
		}
		
		.pink-bar {
			width: 250px;
			height: 10px;
		}
	}

	@media (max-width: 576px) {
		.alheli-section {
			padding: 0.3cm 0.5rem 0.45cm 0.5rem;
		}
		
		.top-text {
			font-size: clamp(0.9rem, 1.8vw, 1rem);
			margin-bottom: 0.4rem;
		}
		
		.alheli-logo {
			max-height: 90px;
		}
		
		.description-text {
			font-size: clamp(0.8rem, 1.8vw, 0.95rem);
			margin-bottom: 0.4rem;
		}
		
		.pink-bar {
			width: 220px;
			height: 9px;
		}
	}

	@media (max-width: 480px) {
		.alheli-section {
			padding: 0.2cm 0.5rem 0.3cm 0.5rem;
		}
		
		.top-text {
			font-size: clamp(0.85rem, 1.6vw, 0.95rem);
			margin-bottom: 0.3rem;
		}
		
		.alheli-logo {
			max-height: 80px;
		}
		
		.description-text {
			font-size: clamp(0.75rem, 1.6vw, 0.9rem);
			margin-bottom: 0.3rem;
		}
		
		.pink-bar {
			width: 200px;
			height: 8px;
		}
	}

	@media (max-width: 360px) {
		.alheli-section {
			padding: 0.15cm 0.3rem 0.225cm 0.3rem;
			max-width: 100vw;
			overflow-x: hidden;
		}
		
		.top-text {
			font-size: clamp(0.8rem, 1.4vw, 0.9rem);
			margin-bottom: 0.2rem;
		}
		
		.alheli-logo {
			max-height: 70px;
		}
		
		.description-text {
			font-size: clamp(0.7rem, 1.4vw, 0.85rem);
			margin-bottom: 0.2rem;
		}
		
		.pink-bar {
			width: 180px;
			height: 7px;
		}
	}

	/* Estilos para la sección de información del evento */
	.event-info-section {
		width: 100%;
		max-width: 100vw;
		background: #000000;
		display: flex;
		justify-content: center;
		align-items: center;
		padding: 1rem 2rem 3rem 2rem;
		font-family: sans-serif;
		box-sizing: border-box;
		overflow-x: hidden;
	}

	.event-info-panel {
		background: linear-gradient(135deg, #0a0a0a 0%, #1a0a1a 50%, #0a0a0a 100%);
		border-radius: 20px;
		padding: 4.5rem 3rem;
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 3rem;
		max-width: 1100px;
		width: 100%;
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
	}

	.info-column {
		flex: 1;
		text-align: center;
	}

	.column-title {
		font-size: 32px;
		font-weight: bold;
		color: white;
		text-transform: uppercase;
		margin-bottom: 2rem;
		letter-spacing: 0.15em;
		font-family: 'Montserrat', sans-serif;
		line-height: 36px;
	}

	.column-content {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.date-line,
	.place-line,
	.address-line {
		color: white;
		font-size: 22px;
		font-weight: normal;
		line-height: 26px;
		font-family: Arial, sans-serif;
		letter-spacing: 0.05em;
	}

	.divider-line {
		width: 8px;
		height: 255px;
		background: #E62686;
		border-radius: 4px;
		flex-shrink: 0;
	}

	/* Responsive para la sección de información del evento */
	@media (max-width: 1200px) {
		.event-info-section {
			padding: 4rem 1.5rem;
		}

		.event-info-panel {
			padding: 3.5rem 2.5rem;
			gap: 2.5rem;
			max-width: 1000px;
		}

		.column-title {
			font-size: 30px;
			line-height: 34px;
		}

		.date-line,
		.place-line,
		.address-line {
			font-size: 20px;
			line-height: 24px;
		}

		.divider-line {
			height: 220px;
		}
	}

	@media (max-width: 992px) {
		.event-info-section {
			padding: 3.5rem 1.2rem;
		}

		.event-info-panel {
			padding: 3rem 2.5rem;
			gap: 2.5rem;
		}

		.column-title {
			font-size: 28px;
			line-height: 32px;
		}

		.date-line,
		.place-line,
		.address-line {
			font-size: 19px;
			line-height: 23px;
		}

		.divider-line {
			height: 200px;
		}
	}

	@media (max-width: 768px) {
		.event-info-section {
			padding: 0.8rem 1rem;
			max-width: 100vw;
			overflow-x: hidden;
		}

		.event-info-panel {
			flex-direction: column;
			gap: 2rem;
			padding: 2.5rem 2rem;
			max-width: 100%;
		}

		.divider-line {
			width: 100%;
			height: 8px;
		}

		.column-title {
			font-size: 24px;
			line-height: 28px;
			margin-bottom: 1.5rem;
		}

		.date-line,
		.place-line,
		.address-line {
			font-size: 18px;
			line-height: 22px;
		}
	}

	@media (max-width: 576px) {
		.event-info-section {
			padding: 0.6rem 0.8rem;
		}

		.event-info-panel {
			padding: 2rem 1.5rem;
			gap: 1.8rem;
		}

		.column-title {
			font-size: 22px;
			line-height: 26px;
			margin-bottom: 1.3rem;
		}

		.date-line,
		.place-line,
		.address-line {
			font-size: 16px;
			line-height: 20px;
		}

		.divider-line {
			height: 6px;
		}
	}

	@media (max-width: 480px) {
		.event-info-section {
			padding: 0.4rem 0.5rem;
		}

		.event-info-panel {
			padding: 1.5rem 1rem;
			gap: 1.5rem;
		}

		.column-title {
			font-size: 20px;
			line-height: 24px;
			margin-bottom: 1.2rem;
		}

		.date-line,
		.place-line,
		.address-line {
			font-size: 15px;
			line-height: 19px;
		}

		.divider-line {
			height: 5px;
		}
	}

	@media (max-width: 360px) {
		.event-info-section {
			padding: 0.3rem 0.3rem;
		}

		.event-info-panel {
			padding: 1.2rem 0.8rem;
			gap: 1.2rem;
		}

		.column-title {
			font-size: 18px;
			line-height: 22px;
			margin-bottom: 1rem;
		}

		.date-line,
		.place-line,
		.address-line {
			font-size: 14px;
			line-height: 18px;
		}

		.divider-line {
			height: 4px;
		}
	}

	/* Estilos para orientación landscape en móviles */
	@media (max-width: 768px) and (orientation: landscape) {
		.alheli-section {
			min-height: auto;
			padding: 0.3rem 0.5rem 1rem 0.5rem;
			max-width: 100vw;
			overflow-x: hidden;
		}
		
		.top-text {
			font-size: clamp(0.8rem, 1.5vw, 1rem);
			margin-bottom: 1rem;
		}
		
		.alheli-logo {
			max-height: 60px;
		}
		
		.description-text {
			font-size: clamp(0.7rem, 1.5vw, 0.9rem);
			margin-bottom: 1.5rem;
		}
		
		.pink-bar {
			width: 150px;
			height: 6px;
		}
		
		.event-info-section {
			padding: 1.5rem 0.5rem;
		}
		
		.event-info-panel {
			padding: 1.5rem 1rem;
			gap: 1rem;
		}
		
		.column-title {
			font-size: 16px;
			line-height: 20px;
			margin-bottom: 0.8rem;
		}
		
		.date-line,
		.place-line,
		.address-line {
			font-size: 12px;
			line-height: 16px;
		}
	}

	/* Mejoras de accesibilidad y usabilidad */
	@media (prefers-reduced-motion: reduce) {
		* {
			animation-duration: 0.01ms !important;
			animation-iteration-count: 1 !important;
			transition-duration: 0.01ms !important;
		}
	}

	/* Estilos para pantallas de alta densidad */
	@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
		.alheli-logo,
		.rosa-background-image {
			image-rendering: -webkit-optimize-contrast;
			image-rendering: crisp-edges;
		}
	}

	/* Estilos para pantallas muy anchas */
	@media (min-width: 1400px) {
		.event-info-panel {
			max-width: 1300px;
		}
		
		.column-title {
			font-size: 36px;
			line-height: 40px;
		}
		
		.date-line,
		.place-line,
		.address-line {
			font-size: 28px;
			line-height: 32px;
		}
		
		.divider-line {
			height: 200px;
		}
	}
</style>
